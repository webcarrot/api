{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022", "dom"]
  },
  "include": ["./src/*"],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true
}

{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "lib": ["es7", "es2017", "dom"]
  },
  "include": ["./*.ts"],
  "exclude": ["./*.js"],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true
}

{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es7", "es2017", "dom"],
    "paths": {
      "@webcarrot/api": ["./src/index"],
      "@webcarrot/api/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./example/**/*"],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true
}

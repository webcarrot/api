{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "sourceMap": false,
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "lib": ["es7", "es2017", "dom"]
  },
  "exclude": ["./browser/**/*"],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true
}
